class Personaje:
    def __init__(self , nombre , nivel , posicion):
        self.nombre = nombre
        self.nivel = nivel
        self.posicion = posicion
        self.vida = 100
    def mover_derecha(self, pasos=1):
        self.posicion[0] +=1
    def mostrar_posicion(self):
        print(f"{self.name}) esta en la posicion {self.posicion}")

mario_broster = Personaje("mario_broster",0,[0,0])
mario_broster.mostrar_posicion()
mario_broster.mover_derecha()
mario_broster.mostrar_posicion()





